generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
    output = "/home/ubuntu/bookmarkhubaionepage/nextjs_space/node_modules/.prisma/client"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model WaitlistEntry {
  id        String   @id @default(cuid())
  email     String   @unique
  source    String?  // Where they signed up from (e.g., "hero", "cta", "footer")
  userAgent String?  @map("user_agent") // Browser/device info
  referrer  String?  // Referrer URL
  ipAddress String?  @map("ip_address") // IP address (for analytics)
  createdAt DateTime @default(now()) @map("created_at")

  @@map("waitlist_entries")
}
